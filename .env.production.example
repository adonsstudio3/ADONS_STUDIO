# ADONS Studio - Production Environment Configuration
# Copy this file to .env.local and fill in your actual values

# ================================
# NEXT.JS CONFIGURATION
# ================================
NODE_ENV=production
NEXT_PUBLIC_APP_NAME="ADONS Studio"
NEXT_PUBLIC_APP_URL="https://your-domain.com"

# ================================
# SUPABASE CONFIGURATION
# ================================
# Get these values from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL="https://your-project-id.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# ================================
# BACKEND API CONFIGURATION
# ================================
# Your backend API URL (if using separate backend)
BACKEND_URL="https://api.your-domain.com"
NEXT_PUBLIC_API_URL="https://api.your-domain.com"

# API rate limiting
API_RATE_LIMIT_REQUESTS=100
API_RATE_LIMIT_WINDOW=900000

# ================================
# AUTHENTICATION & SECURITY
# ================================
# JWT secret for token signing (generate a secure random string)
JWT_SECRET="your-super-secure-jwt-secret-key-minimum-32-characters"
JWT_EXPIRES_IN="24h"

# Session secret for Next.js sessions
NEXTAUTH_SECRET="your-nextauth-secret-key-minimum-32-characters"
NEXTAUTH_URL="https://your-domain.com"

# Admin authentication
ADMIN_USERNAME="admin@your-domain.com"
ADMIN_PASSWORD_HASH="$2b$10$your-bcrypt-hashed-password"

# ================================
# FILE UPLOAD & STORAGE
# ================================
# File upload limits (in bytes)
MAX_FILE_SIZE_IMAGE=10485760
MAX_FILE_SIZE_VIDEO=104857600
MAX_FILE_SIZE_DOCUMENT=5242880

# Storage configuration
STORAGE_PROVIDER="supabase"
STORAGE_BUCKET_PROJECTS="project-media"
STORAGE_BUCKET_HERO="hero-media"
STORAGE_BUCKET_SHOWREELS="showreel-media"
STORAGE_BUCKET_GENERAL="general-uploads"

# ================================
# EMAIL CONFIGURATION
# ================================
# For notifications and contact forms
SMTP_HOST="smtp.your-email-provider.com"
SMTP_PORT=587
SMTP_USER="your-email@your-domain.com"
SMTP_PASS="your-email-password"
SMTP_FROM="noreply@your-domain.com"

# ================================
# ANALYTICS & MONITORING
# ================================
# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID="G-XXXXXXXXXX"

# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# Performance monitoring
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_DEBUG_MODE=false

# ================================
# SEO & SOCIAL MEDIA
# ================================
# Open Graph and Twitter Card defaults
NEXT_PUBLIC_SITE_NAME="ADONS Studio"
NEXT_PUBLIC_SITE_DESCRIPTION="Creative Digital Solutions That Transform Your Vision Into Reality"
NEXT_PUBLIC_SITE_IMAGE="https://your-domain.com/images/og-image.jpg"
NEXT_PUBLIC_TWITTER_HANDLE="@adonsstudio"

# Social media links
NEXT_PUBLIC_INSTAGRAM_URL="https://instagram.com/adonsstudio"
NEXT_PUBLIC_LINKEDIN_URL="https://linkedin.com/company/adonsstudio"
NEXT_PUBLIC_YOUTUBE_URL="https://youtube.com/@adonsstudio"
NEXT_PUBLIC_FACEBOOK_URL="https://facebook.com/adonsstudio"

# ================================
# BUSINESS INFORMATION
# ================================
# Contact information
NEXT_PUBLIC_BUSINESS_NAME="ADONS Studio"
NEXT_PUBLIC_BUSINESS_EMAIL="info@your-domain.com"
NEXT_PUBLIC_BUSINESS_PHONE="+1-555-123-4567"
NEXT_PUBLIC_BUSINESS_ADDRESS="123 Creative Street, City, State 12345"

# Local SEO
NEXT_PUBLIC_BUSINESS_LATITUDE="40.7128"
NEXT_PUBLIC_BUSINESS_LONGITUDE="-74.0060"
NEXT_PUBLIC_BUSINESS_HOURS="Mon-Fri 9AM-6PM"

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================
# YouTube API (for showreel metadata)
YOUTUBE_API_KEY="your-youtube-api-key"

# Vimeo API (for showreel metadata)
VIMEO_ACCESS_TOKEN="your-vimeo-access-token"

# Google Maps API (for contact page)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your-google-maps-api-key"

# ================================
# CACHING & PERFORMANCE
# ================================
# Redis for caching (optional)
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""

# CDN configuration
NEXT_PUBLIC_CDN_URL="https://cdn.your-domain.com"

# ================================
# DEVELOPMENT & DEBUGGING
# ================================
# Only set these in development
# DEBUG=true
# VERBOSE_LOGGING=true
# SKIP_AUTH_IN_DEV=false

# ================================
# BACKUP & MAINTENANCE
# ================================
# Database backup configuration
DB_BACKUP_ENABLED=true
DB_BACKUP_SCHEDULE="0 2 * * *"
DB_BACKUP_RETENTION_DAYS=30

# Maintenance mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="We're currently performing scheduled maintenance. Please check back soon."

# ================================
# WEBHOOKS & NOTIFICATIONS
# ================================
# Slack webhook for admin notifications
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/your/slack/webhook"

# Discord webhook for notifications
DISCORD_WEBHOOK_URL="https://discord.com/api/webhooks/your-webhook-url"

# ================================
# FEATURE FLAGS
# ================================
# Enable/disable features
FEATURE_CONTACT_FORM=true
FEATURE_NEWSLETTER=true
FEATURE_BLOG=false
FEATURE_TESTIMONIALS=true
FEATURE_PORTFOLIO_FILTERING=true

# ================================
# SECURITY HEADERS
# ================================
# Content Security Policy
CSP_REPORT_URI="https://your-domain.com/api/csp-report"

# Additional security settings
SECURE_HEADERS=true
FORCE_HTTPS=true
HSTS_MAX_AGE=31536000