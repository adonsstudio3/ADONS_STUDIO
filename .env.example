# ==============================================
# ANALYTICS & TRACKING (RECOMMENDED for production)
# ==============================================

# Google Tag Manager ID for analytics and conversion tracking
# Actively used for: page views, form submissions, user interactions, video tracking, downloads, contact attempts
# If not provided, defaults to: GTM-KWVBM75J (set your own for accurate tracking)
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Google Analytics 4 Measurement ID (works with GTM)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Website URL (production domain)
NEXT_PUBLIC_SITE_URL=https://adonsstudio.com

# Social media handles (without @ symbol)
NEXT_PUBLIC_TWITTER_HANDLE=adonsstudio
NEXT_PUBLIC_INSTAGRAM_HANDLE=adonsstudio
NEXT_PUBLIC_YOUTUBE_HANDLE=adonsstudio
NEXT_PUBLIC_LINKEDIN_HANDLE=company/adons-studio

# ==============================================
# SUPABASE CONFIGURATION (REQUIRED)
# ==============================================

# Supabase project URL (public, safe to expose)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co

# Supabase anon key (public, safe to expose)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (SERVER-ONLY, NEVER commit or expose to client)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ==============================================
# EMAIL SERVICE CONFIGURATION (Resend)
# ==============================================

# Resend API key for sending emails (SERVER-ONLY)
# Get your API key from https://resend.com/api-keys
# This is REQUIRED for contact form submissions and password resets
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxx

# ==============================================
# REDIS RATE LIMITING (STRONGLY RECOMMENDED for production)
# ==============================================

# Upstash Redis URL for distributed rate limiting
# Get your REST URL from https://console.upstash.io
# Without Redis: Falls back to in-memory rate limiting (per-instance only, not distributed)
# With Redis: Distributed rate limiting across multiple server instances
UPSTASH_REDIS_REST_URL=https://your-redis-url.upstash.io

# Upstash Redis Token
UPSTASH_REDIS_REST_TOKEN=your-redis-token-here

# ==============================================
# API CONFIGURATION
# ==============================================

# Backend API URL
NEXT_PUBLIC_API_URL=https://api.adonsstudio.com

# Contact form endpoints
NEXT_PUBLIC_CONTACT_API=/api/contact
NEXT_PUBLIC_NEWSLETTER_API=/api/newsletter

# ==============================================
# DEVELOPMENT SETTINGS
# ==============================================

# Environment (development, staging, production)
NODE_ENV=production

# Enable/disable debug features
NEXT_PUBLIC_DEBUG=false

# Enable/disable SEO analytics in development
NEXT_PUBLIC_DEV_ANALYTICS=false

# ==============================================
# PERFORMANCE & MONITORING
# ==============================================

# Enable performance monitoring
NEXT_PUBLIC_PERFORMANCE_MONITORING=true

# Web vitals tracking
NEXT_PUBLIC_TRACK_WEB_VITALS=true

# Error tracking service (optional)
NEXT_PUBLIC_SENTRY_DSN=

# ==============================================
# SEO SPECIFIC SETTINGS
# ==============================================

# Default meta description
NEXT_PUBLIC_DEFAULT_DESCRIPTION="Professional VFX, Animation & Post-Production Studio | Crafting Visual Masterpieces for Films, Commercials & Digital Media"

# Business information for structured data
NEXT_PUBLIC_BUSINESS_NAME="ADONS Studio"
NEXT_PUBLIC_BUSINESS_EMAIL="adonsstudio3@gmail.com"
NEXT_PUBLIC_BUSINESS_FOUNDING_YEAR="2023"

# Geographic targeting
NEXT_PUBLIC_GEO_REGION="IN"
NEXT_PUBLIC_GEO_COUNTRY="India"

# ==============================================
# THIRD-PARTY SERVICES
# ==============================================

# Font services
NEXT_PUBLIC_FONTSHARE_API="https://api.fontshare.com/v2/css"

# Image optimization services (if using external CDN)
NEXT_PUBLIC_IMAGE_CDN=

# ==============================================
# SECURITY SETTINGS
# ==============================================

# Content Security Policy reporting
NEXT_PUBLIC_CSP_REPORT_URI=

# Security headers configuration
NEXT_PUBLIC_SECURITY_HEADERS=strict

# ==============================================
# FEATURE FLAGS
# ==============================================

# Enable/disable specific SEO features
NEXT_PUBLIC_ENABLE_BREADCRUMBS=true
NEXT_PUBLIC_ENABLE_STRUCTURED_DATA=true
NEXT_PUBLIC_ENABLE_OPEN_GRAPH=true
NEXT_PUBLIC_ENABLE_TWITTER_CARDS=true
NEXT_PUBLIC_ENABLE_SITEMAP=true
NEXT_PUBLIC_ENABLE_ROBOTS_TXT=true

# ==============================================
# ADDITIONAL NOTES
# ==============================================

# 1. Never commit .env.local to version control
# 2. Use strong, unique values for all secrets
# 3. Update NEXT_PUBLIC_SITE_URL for different environments
# 4. GTM and GA IDs should be environment-specific
# 5. Enable debug features only in development
# 6. Review and update these values regularly

# REQUIRED ENVIRONMENT VARIABLES FOR DEPLOYMENT:
# - NEXT_PUBLIC_SUPABASE_URL
# - NEXT_PUBLIC_SUPABASE_ANON_KEY
# - SUPABASE_SERVICE_ROLE_KEY (server-only)
# - RESEND_API_KEY (for contact form & password reset emails)
# - UPSTASH_REDIS_REST_URL (strongly recommended - for distributed rate limiting)
# - UPSTASH_REDIS_REST_TOKEN (strongly recommended - for distributed rate limiting)
# - NEXT_PUBLIC_GTM_ID (recommended - for analytics tracking)

# NOTE ON RATE LIMITING:
# - If Redis variables are NOT set: rate limiting will use in-memory cache (works per-instance)
# - If Redis variables ARE set: rate limiting will be distributed across all server instances
# - For single-server deployments: in-memory is fine
# - For multi-instance deployments (Vercel, Netlify, etc.): Redis is STRONGLY RECOMMENDED

# NOTE ON ANALYTICS (GTM):
# - GTM actively tracks: page views, form submissions, user interactions, video plays, downloads
# - If GTM_ID not set: uses hardcoded default GTM-KWVBM75J for tracking
# - For accurate analytics: set your own GTM_ID from your Google Tag Manager account